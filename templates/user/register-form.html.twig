{% extends 'base.html.twig' %}

{% block title %}
    Регистрация
{% endblock %}

{% block body %}
    <main>
        <div class="auth-container">
            <h1 class="auth-title">
                Регистрация
            </h1>

            {{ form_start(form, {"attr": {"class": "auth-form"}}) }}
            <div class="form-group">
                <label for="registration_form_username">
                    Имя пользователя
                </label>

                {{ form_widget(form.username) }}
            </div>

            <div class="form-group">
                <label for="registration_form_password_first">
                    Пароль
                </label>

                {{ form_widget(form.password.first) }}
            </div>

            <div class="form-group">
                <label for="registration_form_password_second">
                    Подтверждение пароля
                </label>

                {{ form_widget(form.password.second) }}
            </div>

            <button type="submit" class="auth-btn">
                Зарегистрироваться
            </button>

            <div class="auth-footer">
                Уже есть аккаунт?
                <a href="{{ path('getUserLogin') }}">
                    Войдите
                </a>
            </div>

            {{ form_end(form) }}
        </div>
    </main>
{% endblock %}
